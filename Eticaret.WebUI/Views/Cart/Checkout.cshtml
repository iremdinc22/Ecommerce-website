@model CheckoutViewModel

@{
    ViewData["Title"] = "Sipariş Özeti";
}

<section class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-success d-flex justify-content-center align-items-center gap-3">
            <i class="bi bi-credit-card-2-front-fill"></i> Satın Al
        </h1>
        <p class="text-muted fs-5">Sipariş bilgilerin aşağıda listelenmiştir. Onaylayarak devam edebilirsin.</p>
    </div>

    <form asp-action="Checkout" asp-controller="Cart" method="post">
        <div class="row g-4 justify-content-center">
            <div class="col-12 col-lg-8">

                <!-- Sepet -->
                <div class="p-4 bg-white shadow-sm rounded-4">
                    <h4 class="fw-bold mb-3 text-primary">Sepetiniz</h4>
                    @if (Model.CartProducts != null && Model.CartProducts.Any())
                    {
                        <table class="table table-hover align-middle text-center">
                            <thead class="table-light">
                                <tr>
                                    <th>Ürün</th>
                                    <th>Adet</th>
                                    <th>Birim Fiyat</th>
                                    <th>Toplam</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartProducts)
                                {
                                    <tr>
                                        <td class="text-start">
                                            <div class="d-flex align-items-center gap-3">
                                                <img src="/Img/Products/@item.Product.Image" alt="@item.Product.Name"
                                                    class="rounded-3" style="height: 60px; width: 60px; object-fit: cover;" />
                                                <a class="fw-semibold text-dark text-decoration-none"
                                                    href="/Products/Details/@item.Product.Id">@item.Product.Name</a>
                                            </div>
                                        </td>
                                        <td class="fw-semibold">@item.Quantity</td>
                                        <td class="fw-bold text-success">@item.Product.Price.ToString("c")</td>
                                        <td class="fw-semibold">@((item.Quantity * item.Product.Price).ToString("c"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center p-4 rounded-4">
                            <i class="bi bi-cart-x" style="font-size: 2rem;"></i>
                            <h5 class="mt-3 fw-bold">Sepetiniz boş!</h5>
                            <p class="text-muted">Alışverişe devam etmek için ürünlere göz atın.</p>
                            <a href="/Products" class="btn btn-primary">Ürünlere Göz At</a>
                        </div>
                    }
                </div>

                <!-- Adres Seçimi -->
                @if (Model.Addresses != null && Model.Addresses.Any())
                {
                    <div class="mt-4 bg-white p-4 rounded-4 shadow-sm">
                        <h5 class="fw-bold text-primary mb-3">Adres Seçimi</h5>
                        <div class="row g-3">
                            @foreach (var item in Model.Addresses)
                            {
                                <div class="col-md-6">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title fw-bold">@item.Title</h6>
                                            <p class="card-text">@item.OpenAddress, @item.District / @item.City</p>

                                            <!-- Teslimat Adresi -->
                                            <div class="form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="radio" name="DeliveryAddress"
                                                        value="@item.AddressGuid" @(item.IsDeliveryAddress ? "checked" : "") />
                                                    Teslimat Adresi
                                                </label>
                                            </div>


                                            <!-- Fatura Adresi -->
                                            <div class="form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="radio" name="BillingAddress"
                                                        value="@item.AddressGuid" @(item.IsBillingAddress ? "checked" : "") />
                                                    Fatura Adresi
                                                </label>
                                            </div>


                                            <span asp-validation-for="DeliveryAddress" class="text-danger d-block mt-1"></span>
                                            <span asp-validation-for="BillingAddress" class="text-danger d-block"></span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger mt-4 text-center p-4 rounded-4">
                        <h5><i class="bi bi-exclamation-triangle-fill me-2"></i> Kayıtlı adres bulunamadı!</h5>
                        <p class="text-muted">Sipariş vermek için en az bir adres eklemelisiniz.</p>
                        <a href="/MyAddresses/Create" class="btn btn-danger mt-2">
                            <i class="bi bi-plus-circle me-1"></i> Adres Ekle
                        </a>
                    </div>
                }

                <!-- Ödeme Bilgileri -->
                <div class="bg-white mt-4 p-4 rounded-4 shadow-sm">
                    <h5 class="fw-bold mb-3 text-primary">Ödeme Bilgileri</h5>

                    <div class="mb-3">
                        <label asp-for="CardHolderName" class="form-label"></label>
                        <input asp-for="CardHolderName" class="form-control" placeholder="Ad Soyad" />
                        <span asp-validation-for="CardHolderName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CardNumber" class="form-label"></label>
                        <input asp-for="CardNumber" class="form-control" placeholder="0000 0000 0000 0000" />
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6 col-lg-4">
                            <label asp-for="CardMonth" class="form-label">Ay</label>
                            <select asp-for="CardMonth" class="form-select">
                                <option value="" disabled>Ay</option>
                                @for (int i = 1; i <= 12; i++)
                                {
                                    <option value="@i">@i.ToString("D2")</option>
                                }
                            </select>
                            <span asp-validation-for="CardMonth" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 col-lg-4">
                            <label asp-for="CardYear" class="form-label">Yıl</label>
                            <select asp-for="CardYear" class="form-select">
                                <option value="" disabled>Yıl</option>
                                @for (int y = DateTime.Now.Year; y <= DateTime.Now.Year + 10; y++)
                                {
                                    <option value="@y">@y</option>
                                }
                            </select>
                            <span asp-validation-for="CardYear" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 col-lg-4">
                            <label asp-for="CVV" class="form-label"></label>
                            <input asp-for="CVV" class="form-control" placeholder="123" />
                            <span asp-validation-for="CVV" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-check mt-3">
                        <input asp-for="IsAgreementChecked" class="form-check-input" type="checkbox" />
                        <label asp-for="IsAgreementChecked" class="form-check-label">
                            Ön bilgilendirme formunu ve mesafeli satış sözleşmesini okudum, onaylıyorum.
                        </label>
                        <span asp-validation-for="IsAgreementChecked" class="text-danger d-block"></span>
                    </div>

                    <div class="mt-4 d-flex justify-content-end">
                        <button type="submit" class="btn btn-success px-4 py-2 fw-semibold rounded shadow-sm">
                            <i class="bi bi-credit-card me-2"></i> Ödeme Yap
                        </button>
                    </div>
                </div>
            </div>

            <!-- Sağ Alan -->
            @if (Model.CartProducts != null && Model.CartProducts.Any())
            {
                <div class="col-12 col-lg-4">
                    <div class="bg-white p-4 rounded-4 shadow-sm border">
                        <h4 class="fw-bold mb-4 text-center text-primary">Sipariş Özeti</h4>
                        <table class="table mb-4">
                            <tbody>
                                <tr>
                                    <td class="fw-semibold">Ara Toplam</td>
                                    <td class="text-end">@Model.TotalPrice.ToString("c")</td>
                                </tr>
                                <tr>
                                    <td class="fw-semibold">Kargo</td>
                                    <td class="text-end">
                                        @(Model.TotalPrice > 999 ? "Ücretsiz" : "99₺")
                                    </td>
                                </tr>
                                <tr class="table-info">
                                    <th class="fw-bold">Genel Toplam</th>
                                    <th class="text-end">
                                        @(Model.TotalPrice > 999 ? Model.TotalPrice.ToString("c") : (Model.TotalPrice +
                                                                            99).ToString("c"))
                                </th>
                            </tr>
                        </tbody>
                    </table>

                        <a href="/Products" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Ürünlere Geri Dön
                        </a>
                    </div>
                </div>
                        }
        </div>
    </form>
</section>

