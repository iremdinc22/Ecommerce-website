@model ProductDetailViewModel

@{
    ViewData["Title"] = Model.Product.Name;
}

<!-- Product section-->
<section>
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0" src="~/Img/Products/@Model.Product.Image" alt="..." />
            </div>
            <div class="col-md-6">
                <div class="small mb-1">@Model.Product.ProductCode</div>
                <h1 class="display-5 fw-bolder">@Model.Product.Name</h1>
                <div class="fs-5 mb-5">
                    @* İndirimli fiyat örneği *@
                    <span>@Model.Product.Price.ToString("c")</span>
                </div>
                <p class="lead">
                    @Model.Product.Description
                </p>
                <div class="d-flex">
                    <form asp-action="Add" asp-controller="Cart" class="d-flex">
                        <input type="hidden" name="ProductId" value="@Model.Product.Id" />
                        <input class="form-control text-center me-3" name="quantity" id="inputQuantity" type="number"
                            value="1" style="max-width: 5rem" />
                        <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                            <i class="bi bi-cart-fill me-1"></i>
                            Sepete Ekle
                        </button>
                    </form>

                    <form asp-action="Add" asp-controller="Favorites" method="post"
                        class="d-flex align-items-center ms-3">
                        <input type="hidden" name="ProductId" value="@Model.Product.Id" />
                        <button type="submit"
                            class="btn btn-outline-danger d-flex align-items-center gap-2 px-3 py-2 shadow-sm"
                            title="Favorilere ekle" aria-label="Favorilere ekle">
                            <i class="bi bi-heart-fill"></i>
                            <span>Favorilere Ekle</span>
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

<!-- Related items section-->
<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">İlişkili Ürünler</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model.RelatedProducts)
            {
                <partial name="_ProductView" model="@item" />
            }
        </div>
    </div>
</section>
