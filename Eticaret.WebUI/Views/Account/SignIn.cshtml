@model LoginViewModel
@{
    ViewData["Title"] = "Giriş";
    Layout= "_AccountLayout";
}

<style>
    html, body {
        height: 100%;
    }

    .form-signin {
        max-width: 360px;
        padding: 2rem;
        background-color: #fff;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-signin .form-floating:focus-within {
        z-index: 2;
    }

    .form-signin input[type="email"],
    .form-signin input[type="password"] {
        margin-bottom: -1px;
        border-radius: 0.5rem;
    }

    .form-check-input {
        margin-top: 0.3rem;
    }

    /* Hover efektleri */
    .btn {
        transition: all 0.3s ease, background-color 0.3s ease, transform 0.3s ease;
    }

    .btn:hover {
        transform: scale(1.03);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    /* Renk geçişleri - özel buton tipleri */
    .btn-primary:hover {
        background-color: #0b5ed7; /* bir ton daha koyu mavi */
        border-color: #0a58ca;
    }

    .btn-outline-info:hover {
        background-color: #0dcaf0;
        color: #fff;
    }

    .btn-outline-warning:hover {
        background-color: #ffc107;
        color: #fff;
    }

    /* Üye Ol ve Şifremi Unuttum butonları form genişliğiyle hizalanacak */
    .btn-custom-width {
        max-width: 360px;
        margin: 0 auto;
        display: block;
    }
</style>

<main class="form-signin w-100 m-auto my-5">
    <form asp-action="SignIn">
        <h1 class="h3 mb-4 fw-bold text-center text-primary">Üye Girişi</h1>

        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-center"></div>

        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
            <label for="floatingInput">Email</label>
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password" />
            <label for="floatingPassword">Şifre</label>
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>

        <div class="form-check text-start mb-4">
            <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="flexCheckDefault" />
            <label class="form-check-label" for="flexCheckDefault">
                Beni Hatırla
            </label>
        </div>

        <input type="hidden" asp-for="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />

        <button class="btn btn-primary w-100 py-2 shadow-sm rounded-4" type="submit">
            <i class="bi bi-box-arrow-in-right me-2"></i> Giriş Yap
        </button>
    </form>
</main>

<div class="row mt-4 text-center">
    <div class="col-12 mb-3">
        <a href="/Account/SignUp" class="btn btn-outline-info py-2 d-flex align-items-center justify-content-center gap-2 rounded-4 shadow-sm btn-custom-width">
            <i class="bi bi-person-plus-fill"></i> Üye Ol
        </a>
    </div>
    <div class="col-12 mb-3">
        <a href="/Account/PasswordRenew" class="btn btn-outline-warning py-2 d-flex align-items-center justify-content-center gap-2 rounded-4 shadow-sm btn-custom-width">
            <i class="bi bi-key-fill"></i> Şifremi Unuttum
        </a>
    </div>
</div>

<hr class="my-5" />

<div class="alert alert-info d-flex align-items-center shadow-sm rounded-4 p-4" role="alert">
    <i class="bi bi-info-circle-fill me-3 fs-3"></i>
    <div class="fs-5">
        <strong>Sipariş oluşturmak</strong>, kampanyalardan yararlanmak ve <strong>siparişinizi takip etmek</strong> için lütfen giriş yapın.
    </div>
</div>

<script defer src="/docs/5.3/dist/js/bootstrap.bundle.min.js"></script>