@model IEnumerable<News>

@{
    ViewData["Title"] = "Kampanya ve Duyurular";
}

<p>
    <a asp-action="Create" class="btn btn-outline-primary d-inline-flex align-items-center">
        <i class="fa-solid fa-plus me-2"></i> Yeni Ekle
    </a>
</p>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.CreateDate)</th>
            <th>@Html.DisplayNameFor(model => model.Image)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Name</td>
                <td>@item.CreateDate.ToString("dd.MM.yyyy")</td>




                <td>
                    @if (!string.IsNullOrWhiteSpace(item.Image))
                    {
                        <img src="/Img/News/@item.Image" height="40" />
                    }
                </td>

                <td>
    <input type="checkbox" class="form-check-input" disabled @(item.IsActive ? "checked" : "") />
</td>


                <td>

                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                    <i class="fa-solid fa-pen-to-square me-1"></i> DÃ¼zenle
                </a>

                <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">
                    <i class="fa-solid fa-circle-info me-1"></i> Detay
                </a>

                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                    <i class="fa-solid fa-trash me-1"></i> Sil
                </a>
                </td>
            </tr>
        }
    </tbody>
</table>
