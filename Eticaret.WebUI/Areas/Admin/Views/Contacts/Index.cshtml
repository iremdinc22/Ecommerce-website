@model IEnumerable<Contact>

@{
    ViewData["Title"] = "İletişim Formları";
}


<table class="table table-hover table-striped">
    <thead>
        <tr>
            
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Surname)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th>@Html.DisplayNameFor(model => model.CreateDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr> 
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.CreateDate.ToShortTimeString()</td>

                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen-to-square me-1"></i> Düzenle
                    </a>

                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa-solid fa-circle-info me-1"></i> Detay
                    </a>

                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa-solid fa-trash me-1"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
