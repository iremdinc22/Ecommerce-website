@{
    ViewData["Title"] = "Yönetim Paneli";
    var products = ViewBag.Products as List<Eticaret.Core.Entities.Product>;
    int totalProducts = products?.Count ?? 0;
}

<div class="container-fluid px-4">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Kontrol Paneli</li>
    </ol>

    <!-- Özet Kartlar -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white shadow-sm mb-4">
                <div class="card-body">Toplam Ürün Sayısı</div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span class="fw-bold fs-5">@totalProducts</span>
                    <i class="fas fa-box-open fa-lg text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white shadow-sm mb-4">
                <div class="card-body">Stokta Olan Ürünler</div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span class="fw-bold fs-5">@products?.Count(p => p.Stock > 0)</span>
                    <i class="fas fa-check-circle fa-lg text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-dark shadow-sm mb-4">
                <div class="card-body">Tükenen Ürünler</div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span class="fw-bold fs-5">@products?.Count(p => p.Stock == 0)</span>
                    <i class="fas fa-exclamation-triangle fa-lg text-dark"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white shadow-sm mb-4">
                <div class="card-body">Toplam Sipariş</div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span class="fw-bold fs-5">@ViewBag.Orders</span>
                    <i class="fas fa-shopping-cart fa-lg text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-secondary text-white shadow-sm mb-4">
                <div class="card-body">Toplam Kullanıcı</div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span class="fw-bold fs-5">@ViewBag.Users</span>
                    <i class="fas fa-users fa-lg text-white"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-dark text-white shadow-sm mb-4">
                <div class="card-body">Bugünkü Satış Tutarı</div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span class="fw-bold fs-5">@(((decimal)ViewBag.TodaySales).ToString("C2", new
                                                System.Globalization.CultureInfo("tr-TR")))</span>
                    <i class="fas fa-coins fa-lg text-white"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-light text-dark shadow-sm mb-4">
                <div class="card-body">Bugünkü Sipariş</div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span class="fw-bold fs-5">@ViewBag.TodayOrders</span>
                    <i class="fas fa-calendar-day fa-lg text-dark"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Grafikler -->
    <div class="row mb-4">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <i class="fas fa-chart-area me-1"></i>
                    Ürün Ekleme Trendleri
                </div>
                <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <i class="fas fa-chart-bar me-1"></i>
                    Ürün Stok Karşılaştırması
                </div>
                <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
    </div>

    <!-- Ürün Tablosu -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <i class="fas fa-table me-1"></i>
            Ürün Listesi
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Kayıt Tarihi</th>
                        <th>Resim</th>
                        <th>Fiyat</th>
                        <th>Ürün Kodu</th>
                        <th>Stok</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Products)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.CreateDate</td>
                            <td>@item.Image</td>
                            <td>@item.Price</td>
                            <td>@item.ProductCode</td>
                            <td>@item.Stock</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="/admin/assets/demo/chart-area-demo.js?v=20250413"></script>
    <script src="/admin/assets/demo/chart-bar-demo.js?v=20250413"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
        crossorigin="anonymous"></script>
    <script src="/admin/js/datatables-simple-demo.js?v=20250413"></script>
}
