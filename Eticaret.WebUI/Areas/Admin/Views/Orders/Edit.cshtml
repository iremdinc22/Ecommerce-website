@model Eticaret.Core.Entities.Order
@using Eticaret.WebUI.Extensions
@using Eticaret.Core.Enums


@{
    ViewData["Title"] = "Sipariş Düzenle";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OrderDate" />
            <input type="hidden" asp-for="OrderNumber" />
            <input type="hidden" asp-for="TotalPrice" />
            <input type="hidden" asp-for="AppUserId" />
            <input type="hidden" asp-for="CustomerId" />

            <div class="form-group mb-3">
                <label asp-for="OrderNumber" class="form-label"></label>
                <input asp-for="OrderNumber" class="form-control" disabled />
                <span asp-validation-for="OrderNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotalPrice" class="form-label"></label>
                <input asp-for="TotalPrice" class="form-control" disabled />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Müşteri</label>
                <input class="form-control" value="@Model.AppUser.Name @Model.AppUser.Surname" readonly />

            </div>

            <div class="form-group mb-3">
                <label asp-for="OrderState" class="form-label">Sipariş Durumu</label>
                <select asp-for="OrderState" class="form-select" asp-items="ViewBag.OrderStates">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="OrderState" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <label asp-for="BillingAddress" class="form-label"></label>
                <input asp-for="BillingAddress" class="form-control" />
                <span asp-validation-for="BillingAddress" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DeliveryAddress" class="form-label"></label>
                <input asp-for="DeliveryAddress" class="form-control" />
                <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="OrderDate" class="form-label"></label>
                <input asp-for="OrderDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk me-1"></i> Kaydet
                </button>
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
            </a>
        </div>
    </div>
</div>
