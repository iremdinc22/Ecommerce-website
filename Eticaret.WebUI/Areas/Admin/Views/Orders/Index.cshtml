</p>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.OrderNumber)</th>
            <th>@Html.DisplayNameFor(model => model.TotalPrice)</th>
            <th>@Html.DisplayNameFor(model => model.AppUser)</th>
            <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
            <th>@Html.DisplayNameFor(model => model.OrderState)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderNumber</td>
                <td>@item.TotalPrice ₺</td>
                <td>@item.AppUser.Name @item.AppUser.Surname</td>
                <td>@item.OrderDate.ToString("dd.MM.yyyy")</td>
                <td>@item.OrderState.GetDisplayName()</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen-to-square me-1"></i> Düzenle
                    </a>
                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa-solid fa-circle-info me-1"></i> Detay
                    </a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa-solid fa-trash me-1"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
