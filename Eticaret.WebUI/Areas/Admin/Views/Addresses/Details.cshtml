@model Eticaret.Core.Entities.Address

@{
    ViewData["Title"] = "Adres Detay";
}

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Title)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.City)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.City)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.District)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.District)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OpenAddress)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.OpenAddress)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsActive)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.IsActive)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsBillingAddress)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.IsBillingAddress)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsDeliveryAddress)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.IsDeliveryAddress)</dd>

    <dt class="col-sm-2">AppUser</dt>
    <dd class="col-sm-10">@Model.AppUser?.Email</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CreateDate)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.CreateDate)</dd>

</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fa-solid fa-pen me-1"></i> Düzenle
    </a>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
    </a>
</div>
