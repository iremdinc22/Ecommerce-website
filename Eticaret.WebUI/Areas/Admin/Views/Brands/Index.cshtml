@model IEnumerable<Eticaret.Core.Entities.Brand>

@{
    ViewData["Title"] = "Markalar";
}

<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="fa-solid fa-plus"></i> Yeni Ekle
    </a>
</p>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Logo)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th>@Html.DisplayNameFor(model => model.OrderNo)</th>
            <th>@Html.DisplayNameFor(model => model.CreateDate)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>

                <td>
                    <img src="/Img/Brands/@item.Logo" alt="" height="75" />
                </td>

                <td>@(item.IsActive ? "Evet" : "Hayır")</td>
                <td>@item.OrderNo</td>

                <td>
                    @(item.CreateDate != DateTime.MinValue 
                        ? item.CreateDate.ToString("dd.MM.yyyy") 
                        : "")
                </td>

                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen-to-square me-1"></i> Düzenle
                    </a>

                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa-solid fa-circle-info me-1"></i> Detay
                    </a>

                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa-solid fa-trash me-1"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
