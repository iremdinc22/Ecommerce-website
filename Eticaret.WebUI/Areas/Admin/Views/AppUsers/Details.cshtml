@model Eticaret.Core.Entities.AppUser

@{
    ViewData["Title"] = "Kullanıcı Detay";
}

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Surname)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Surname)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Phone)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UserName)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UserGuid)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.UserGuid)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsActive)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.IsActive)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsAdmin)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.IsAdmin)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CreateDate)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.CreateDate)</dd>

</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fa-solid fa-pen me-1"></i> Düzenle
    </a>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
    </a>
</div>
