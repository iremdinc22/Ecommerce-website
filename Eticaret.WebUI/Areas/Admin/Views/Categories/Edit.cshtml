@model Category

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Image" />
            <input type="hidden" asp-for="CreateDate" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            @if (Model.Image != null && !string.IsNullOrWhiteSpace(Model.Image))
            {
                
        <img src="/Img/Categories/@Model.Image" height="75" alt="Ürün Resmi" />
    

                <label class="form-check-label">
                    @Html.CheckBox("cbResmiSil") Resmi Sil
                </label>
            }


            <div class="form-check mb-2">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="form-check mb-2">
                <input asp-for="IsTopMenu" class="form-check-input" />
                <label asp-for="IsTopMenu" class="form-check-label"></label>
                <span asp-validation-for="IsTopMenu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ParentId" class="control-label"></label>
                <select asp-for="ParentId" class="form-select" asp-items="ViewBag.Kategoriler">
                    <option value="0">Ana Kategori</option>
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderNo" class="control-label"></label>
                <input asp-for="OrderNo" class="form-control" />
                <span asp-validation-for="OrderNo" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>
